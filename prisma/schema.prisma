generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model categories {
  id          String        @id @db.Char(36)
  name        String        @db.VarChar(80)
  is_private  Boolean       @default(false)
  user_id     String        @db.Char(36)
  users       users         @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "categories_ibfk_1")
  maintenance maintenance[]

  @@index([user_id], map: "user_id")
}

model maintenance {
  id                   String      @id @db.Char(36)
  title                String      @db.VarChar(160)
  category_id          String?     @db.Char(36)
  start_date           DateTime    @db.Date
  repeat_interval      String?     @db.VarChar(16)
  reminder_days_before Int?        @default(7)
  completed            Boolean?    @default(false)
  user_id              String      @db.Char(36)
  users                users       @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_maintenance_user")
  categories           categories? @relation(fields: [category_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "maintenance_ibfk_1")

  @@index([category_id], map: "category_id")
  @@index([user_id], map: "fk_maintenance_user")
}

model users {
  id            String        @id @db.Char(36)
  name          String        @db.VarChar(120)
  email         String        @unique(map: "email") @db.VarChar(180)
  password_hash String        @db.VarChar(255)
  created_at    DateTime      @default(now()) @db.Timestamp(0)
  categories    categories[]
  maintenance   maintenance[]
}
